@model CodeFirstApproach.Models.EmployeeModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Default", FormMethod.Post))
{

    @Html.Label("EmpName")
    @Html.TextBox("EmpName", null, new { @class = "form-control" })<br />

    @Html.LabelFor(x => x.EmpSalary)
    @Html.EditorFor(x => x.EmpSalary, new { htmlAttributes = new { @class = "form-control" } })
    <input type="submit" value="Create" class="btn btn-success" />

}

 